{
    "$schema": "https://github.com/Azure/data-api-builder/releases/latest/download/dab.draft.schema.json",
  
    "data-source": {
      "database-type": "cosmosdb_nosql",
      //  ðŸ”‘ Deze environment-var staat in SWA â€º Settings â€º Configuration
      "connection-string": "@env('COSMOSDB_CONNECTION_STRING')"
    },
  
    "runtime": {
      "rest":  { "enabled": true,  "path": "/rest" },
      "graphql": { "enabled": true, "allow-introspection": true, "path": "/graphql" },
  
      "host": {
        "mode": "production",
        "cors": { "origins": ["http://localhost:4280"], "allow-credentials": false },
        "authentication": { "provider": "StaticWebApps" }
      }
    },
  
    "entities": {
      "CarItem": {
        "source": "carItems",        
        "partitionKey": "/id",      
        "permissions": [
          {                          
            "role": "anonymous",
            "actions": ["read"]
          },
          {                         
            "role": "authenticated",
            "actions": ["create", "update", "delete", "read"]
          }
        ]
      }
    }
  }
  